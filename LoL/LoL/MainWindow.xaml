<Window x:Class="LoL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="League of Legends" Height="768" Width="1024" WindowStartupLocation="CenterScreen"
        MinWidth="800"
        MinHeight="600">
    <Grid Background="DarkBlue">
        <TabControl x:Name="tcMain" HorizontalAlignment="Stretch" Margin="0,97,0,10" VerticalAlignment="Stretch" >
            <TabItem Header="Home" FontSize="14" Padding="10,0,10,0">
                <Grid Background="#FFE5E5E5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                        <Label FontSize="18">Please enter a summoner name</Label>
                        <Label FontSize="16">The following stats will show:</Label>
                        <Label FontSize="14">• Rank</Label>
                        <Label FontSize="14">• Ranked Stats</Label>
                        <Label FontSize="14">• Summoner Statistics</Label>
                        <Label FontSize="14">• Top five champs</Label>
                        <Label></Label>
                        <TextBox x:Name="tbSummonerName" FontSize="16" Text="{Binding Path=SummonerName, Mode=TwoWay}" GotMouseCapture="tbSummonerName_GotMouseCapture" ></TextBox>
                        <Label></Label>
                        <Button Width="50" FontSize="16" Click="Button_Click" >Go</Button>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Summoner Lookup" FontSize="14"  Padding="10,0,10,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0">Top five champions</Label>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                <Label  FontSize="18" HorizontalAlignment="Center">Champion I</Label>
                                <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                            </StackPanel>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion II</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion III</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion IV</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="0 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion V</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0">Ranked Ratings</Label>
                        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Team 3v3</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Stats</Label>
                        </StackPanel>
                        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Row="1"  Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Solo 5v5</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Stats</Label>
                        </StackPanel>
                        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="0 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Row="1"  Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Team 5v5</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Stats</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0.3 0 0 0" SnapsToDevicePixels="True"/>
                        <Border Grid.Row="1" Grid.Column="3" BorderBrush="Black" BorderThickness="0.3 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <Label Margin="10 0 0 0"  Height="30" Grid.Column="4">Statistics</Label>
                        <Grid Grid.Row="1" Grid.Column="3" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="60*"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0">Ranked 5v5</TextBlock>
                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0 0 0 0.3" SnapsToDevicePixels="True"/>
                            <StackPanel  Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top" Margin="10 0 0 0">
                                <TextBlock FontSize="16">Kills:</TextBlock>
                                <TextBlock FontSize="16">Deaths:</TextBlock>
                                <TextBlock FontSize="16">Double:</TextBlock>
                                <TextBlock FontSize="16">Triple:</TextBlock>
                                <TextBlock FontSize="16">Quadra:</TextBlock>
                                <TextBlock FontSize="16">Penta:</TextBlock>
                            </StackPanel>
                            <TextBlock Grid.Row="2" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0">Normal 5v5</TextBlock>
                            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="0.3 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                            <StackPanel  Grid.Row="4" Orientation="Vertical" VerticalAlignment="Top" Margin="10 0 0 0">
                                <TextBlock FontSize="16">Kills:</TextBlock>
                                <TextBlock FontSize="16">Deaths:</TextBlock>
                                <TextBlock FontSize="16">Assists:</TextBlock>
                             </StackPanel>
                        </Grid>
                        <!--<StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel> -->
                    </Grid>
                    <Label Grid.Row="3">Recent Champs</Label>
                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ I</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ II</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ III</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ IV</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="0 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ V</Label>
                                </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Career Averages" FontSize="14"  Padding="10,0,10,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-79">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top" >
                        <TextBlock FontSize="16">Please enter a summoner name</TextBlock>
                        <TextBlock FontSize="16" HorizontalAlignment="Center">for career stats:</TextBlock>
                        <Label></Label>
                        <TextBox FontSize="16" Text="{Binding Path=SummonerName, Mode=TwoWay}" GotMouseCapture="tbSummonerName_GotMouseCapture" ></TextBox>
                        <Label></Label>
                        <Button Width="50" FontSize="16" Click="Button_Click" >Go</Button>
                    </StackPanel>

                </Grid>    
            </TabItem>
        </TabControl>
        <Image HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" Source="Logo.png"/>

    </Grid>
</Window>
