<Window x:Class="LoL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="League of Legends" Height="768" Width="1024" WindowStartupLocation="CenterScreen"
        MinWidth="800"
        MinHeight="600">
    <Grid Background="DarkBlue">
        <TabControl x:Name="tcMain" HorizontalAlignment="Stretch" Margin="0,97,0,10" VerticalAlignment="Stretch" >
            <TabItem Header="Home" FontSize="14" Padding="10,0,10,0">
                <Grid Background="#FFE5E5E5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                        <Label FontSize="18">Please enter a summorer name</Label>
                        <Label FontSize="16">The following stats will show:</Label>
                        <Label FontSize="14">• Rank</Label>
                        <Label FontSize="14">• Ranked Stats</Label>
                        <Label FontSize="14">• Summorer Statistics</Label>
                        <Label FontSize="14">• Top five champs</Label>
                        <Label></Label>
                        <TextBox x:Name="tbSummorerName" FontSize="16" Text="{Binding Path=SummorerName, Mode=TwoWay}" GotMouseCapture="tbSummorerName_GotMouseCapture" ></TextBox>
                        <Label></Label>
                        <Button Width="50" FontSize="16" Click="Button_Click" >Go</Button>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Summorer Lookup" FontSize="14"  Padding="10,0,10,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0">Top five champions</Label>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                <Label  FontSize="18" HorizontalAlignment="Center">Champion I</Label>
                                <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                            </StackPanel>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion II</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion III</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion IV</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="0 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion V</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                    </Grid>
                    <Label Grid.Row="2">Ranked Ratings</Label>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion I</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion II</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion III</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion IV</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="0 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champion V</Label>
                            <Label  FontSize="18" HorizontalAlignment="Center">Averages</Label>
                        </StackPanel>
                    </Grid>
                    <Label Grid.Row="4">Recent Champs</Label>
                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ I</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ II</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ III</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0 0.3 0.3 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ IV</Label>
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="0 0.3 0 0.3" SnapsToDevicePixels="True"/>
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Label  FontSize="18" HorizontalAlignment="Center">Champ V</Label>
                                </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Career Averages" FontSize="14"  Padding="10,0,10,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-79"/>
            </TabItem>
        </TabControl>
        <Image HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" Source="Logo.png"/>

    </Grid>
</Window>
